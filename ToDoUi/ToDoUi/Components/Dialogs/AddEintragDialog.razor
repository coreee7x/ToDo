@using ToDoUi.Models

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            Add Entry
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="String" Label="Name" @bind-Value="newEntry.Name" />
        <MudTextField T="String" Label="Description" @bind-Value="newEntry.Beschreibung" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="AddEntry">Add Entry</MudButton>
    </DialogActions>
</MudDialog>
@code {

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    public ToDoEintrag newEntry = new ToDoEintrag();

    private void Cancel() => MudDialog.Cancel();

    private async Task AddEntry()
    {

        MudDialog.Close(DialogResult.Ok(newEntry));

    }
}